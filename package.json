{
  "name": "MyJsBoilerplate",
  "version": "1.0.0",
  "description": "MyJsBoilerplate",
  "main": "index.js",
  "directories": {
    "test": "test/js"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^2.2.0",
    "eslint-plugin-react": "^4.1.0",
    "espower-babel": "^4.0.1",
    "exorcist": "^0.4.0",
    "mocha": "^2.4.5",
    "power-assert": "^1.2.0",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "postinstall": "npm run build:js",

    "build:js": "browserify -t babelify ./js/**.js -d | exorcist ./assets/js/bundle.js.map > ./assets/js/bundle.js",
    "watch": "watchify -v -t babelify ./js/**.js -o \"exorcist ./assets/js/bundle.js.map > ./assets/js/bundle.js\" -d",
    "test": "NODE_ENV=test mocha --compilers js:espower-babel/guess test/js/*.js",
    "lint": "eslint js/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kesin11/my-js-boilerplate"
  },
  "author": "Kesin11",
  "license": "",
  "bugs": {
    "url": "https://github.com/Kesin11/my-js-boilerplate/issues"
  },
  "homepage": "https://github.com/Kesin11/my-js-boilerplate"
}
